<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profileFragment">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos de Usuario"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/LabelNombre"
            android:layout_margin="10dp"
            />
        <Space
            android:id="@+id/spacer0"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/Titulo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/LabelNombre"
            />
        <TextView
            android:id="@+id/LabelNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/spacer0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/FieldNombre"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/FieldNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/LabelNombre"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/spacer1"
            android:layout_margin="10dp"

            />
        <Space
            android:id="@+id/spacer1"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/FieldNombre"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/LabelApPaterno"
            />
        <TextView
            android:id="@+id/LabelApPaterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido paterno:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/spacer1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/FieldApPaterno"
            android:layout_margin="10dp"
            />

        <EditText
            android:id="@+id/FieldApPaterno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/LabelApPaterno"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/spacer2"
            android:layout_margin="10dp"
            />
        <Space
            android:id="@+id/spacer2"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/FieldApPaterno"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/LabelApMaterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido materno:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/spacer2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/FieldApMaterno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/LabelApMaterno"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="10dp"
            />
        <Space
            android:id="@+id/spacer3"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/FieldApMaterno"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/LabelNombreUsuario"
            />
        <TextView
            android:id="@+id/LabelNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/spacer3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/FieldNombreUsuario"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/FieldNombreUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/LabelNombreUsuario"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/spacer4"
            android:layout_margin="10dp"
            />
        <Space
            android:id="@+id/spacer4"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/FieldNombreUsuario"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/LabelCorreo"
            />
        <TextView
            android:id="@+id/LabelCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo electronico:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/spacer4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/FieldCorreo"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/FieldCorreo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/LabelCorreo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/FieldCorreo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="55dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
